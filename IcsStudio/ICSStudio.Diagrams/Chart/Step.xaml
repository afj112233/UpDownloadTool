<UserControl x:Class="ICSStudio.Diagrams.Chart.Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICSStudio.Diagrams.Chart"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        
        <Border Width="auto" Height="auto" Background="#0000">
            <StackPanel>
                <Border BorderBrush="DarkGray" BorderThickness="2" Width="80" Height="55">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Width="20" Height="15" VerticalAlignment="Bottom" Margin="0,0,0,5" Grid.Row="0" HorizontalAlignment="Left">
                            <TextBlock Height="18" VerticalAlignment="Center" Text="..."></TextBlock>
                        </Button>
                        <TextBlock Grid.Row="1" Text="{Binding Name}" FontSize="10" HorizontalAlignment="Left"></TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="ICSStudio.Diagrams.Chart.Stop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICSStudio.Diagrams.Chart"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Height="45" Background="#0000">
            <StackPanel Orientation="Horizontal" Height="40" Width="auto">
                <Border Width="50">
                    <Canvas >
                        <Ellipse Width="26" Height="26" Stroke="DarkGray" StrokeThickness="1" Canvas.Bottom="0" Canvas.Left="10"></Ellipse>
                        <Ellipse Width="16" Height="16" Fill="DarkGray" Canvas.Bottom="5" Canvas.Left="15"></Ellipse>
                        <Line Stroke="DarkGray" StrokeThickness="3" X1="0" X2="0" Y1="0" Y2="14" Canvas.Left="21" Fill="DarkGray"></Line>
                    </Canvas>
                </Border>
                <TextBlock VerticalAlignment="Bottom" FontSize="12" Margin="0,0,0,5" Text="{Binding Name}"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
